<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maltair.gridapplication.MainActivity">

    <Button
        android:id="@+id/buttonA"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="A"
        app:layout_constraintRight_toLeftOf="@+id/buttonB"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="B"
        app:layout_constraintRight_toLeftOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="C"
        app:layout_constraintRight_toLeftOf="@+id/buttonD"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="D"
        app:layout_constraintRight_toLeftOf="@+id/buttonE"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonE"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="E"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="F"
        app:layout_constraintLeft_toRightOf="@+id/buttonE"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonG"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="G"
        app:layout_constraintLeft_toRightOf="@+id/buttonF"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonH"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="H"
        app:layout_constraintLeft_toRightOf="@+id/buttonG"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <Button
        android:id="@+id/buttonI"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:onClick="setGridValue"
        android:text="I"
        app:layout_constraintLeft_toRightOf="@+id/buttonH"
        app:layout_constraintTop_toBottomOf="@+id/myGrid" />

    <GridView
        android:id="@+id/myGrid"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="10dp"
        android:numColumns="9"
        android:verticalSpacing="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"></GridView>

    <Button
        android:id="@+id/sortBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="randomizeGrid"
        android:text="Sort the Grid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonE" />

</android.support.constraint.ConstraintLayout>
